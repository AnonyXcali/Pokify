<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Pikachu"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/my_pokemon_hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="20 Hp"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/my_pokemon_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_pokemon_hp"
                android:src="@drawable/pikachu"/>

            <LinearLayout
                android:id="@+id/mypokemonTWHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_pokemon_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/my_pokemon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mouse"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/my_pokemon_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="150 g"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/my_pokemon_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="300 cm"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/my_pokemon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypokemonTWHolder"
                android:gravity="center"
                android:text="It is going to be a long description"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/my_pokemon_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="9 lvl"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/my_pokemon_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Pokify :P"
                android:textSize="20dp"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>