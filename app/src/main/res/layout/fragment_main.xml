<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <TextView
                android:id="@+id/myPokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="Pikachu"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/myPokemonHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="100 Hp"
                android:textSize="30sp"/>


            <ImageView
                android:id="@+id/myPokemonImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myPokemonHp"
                android:layout_centerHorizontal="true"
                android:layout_weight="4"
                android:src="@drawable/gaurav"/>

            <LinearLayout
                android:id="@+id/myPokemonTLHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myPokemonImage"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/myPokemonType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text="Type"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/myPokemonLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Level"
                    android:textSize="25sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/myPokemonTLHolder"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/myPokemonWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="8dp"
                    android:text="Weight"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/myPokemonHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="8dp"
                    android:text="Height"
                    android:textSize="25sp"/>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>
